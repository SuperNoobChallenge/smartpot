<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:src="@drawable/icon_main_water" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingLeft="5dp"
                android:text="   "
                android:textStyle="bold"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:id="@+id/ImageView_Stucky_battery"
                android:src="@drawable/icon_bat_max" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:id="@+id/TextView_Stucky_Detail"
            android:text="간결하고 강렬한 스타일로 독보적인 모습을 자랑하는 신선한"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/TextView_Stucky_Title"
            android:text="스투키"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <Button
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@drawable/costom_button_main_1"
                android:text="키우는 법  ▽"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/stucky_grow"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@drawable/costom_button_main_3"
                android:id="@+id/Stucky_is_sync"
                style="?android:borderlessButtonStyle"
                android:text="기기연동 X"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#FF4500"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재상태"
                android:textSize="9dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_main_thermometer"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/TextView_Stucky_temperature"
                android:text="17 %"
                android:paddingLeft="6dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="6dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_main_null_water"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/TextView_Stucky_humidity"
                android:text="17 %"
                android:paddingLeft="6dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_main_full_water"/>
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/TextView_Stucky_moisture"
                android:text="17 %"
                android:paddingLeft="6dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:layout_weight="1">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:id="@+id/TextView_Stucky_TitleImg"
                android:src="@drawable/icon_main_stucky"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
